{
    "name": "@ionaru/typeorm-utils",
    "version": "2.0.0",
    "description": "Common TypeORM utilities I use in my projects",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest -i src",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!src/__mocks__/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [
        "typeorm",
        "utils",
        "utilities",
        "mysql",
        "logging",
        "uuid",
        "orm",
        "typescript"
    ],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/typeorm-utils",
    "license": "MIT",
    "dependencies": {
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@ionaru/eslint-config": "^5.0.1",
        "@types/debug": "^4.1.5",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.6",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.33.0",
        "chalk": "^4.1.1",
        "debug": "^4.3.1",
        "eslint": "^7.27.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.10.0",
        "jest": "^27.3.1",
        "sqlite3": "^5.0.2",
        "supports-color": "^9.0.1",
        "ts-jest": "^27.0.1",
        "tslint": "^6.1.3",
        "typeorm": "^0.2.32",
        "typescript": "^4.3.2",
        "uuid": "^8.3.2"
    },
    "optionalDependencies": {
        "chalk": "^4.1.1",
        "debug": "^4.3.1"
    },
    "peerDependencies": {
        "typeorm": "^0.2.32"
    }
}
