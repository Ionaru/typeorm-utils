{
    "name": "@ionaru/typeorm-utils",
    "version": "1.2.0",
    "description": "Common TypeORM utilities I use in my projects",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest -i src",
        "posttest": "codecov -f coverage/*.json",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!src/__mocks__/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [
        "typeorm",
        "utils",
        "utilities",
        "mysql",
        "logging",
        "uuid",
        "orm",
        "typescript"
    ],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/typeorm-utils",
    "license": "MIT",
    "devDependencies": {
        "@ionaru/eslint-config": "^2.0.1",
        "@types/debug": "^4.1.5",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.20",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.12.0",
        "chalk": "^4.1.0",
        "codecov": "^3.8.1",
        "debug": "^4.3.1",
        "eslint": "^7.17.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.2",
        "eslint-plugin-sonarjs": "^0.5.0",
        "jest": "^26.6.3",
        "sqlite3": "^5.0.1",
        "supports-color": "^8.1.0",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.3",
        "typeorm": "^0.2.29",
        "typescript": "^4.1.3",
        "uuid": "^8.3.2"
    },
    "peerDependencies": {
        "chalk": "^4.1.0",
        "debug": "^4.2.0",
        "supports-color": "^7.2.0 || ^8.0.0",
        "typeorm": "^0.2.28",
        "uuid": "^8.3.1"
    }
}
